{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./lib",
    "lib": ["es6", "es2018.promise", "dom"],
  },
  "include": ["src/*"]
}
